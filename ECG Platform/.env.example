# ECG2Signal Environment Configuration
# Copy this file to .env and customize as needed

# Application
APP_NAME=ECG2Signal
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Model Paths
MODEL_DIR=./models
UNET_MODEL_PATH=./models/unet_weights.onnx
OCR_MODEL_PATH=./models/ocr_transformer.onnx
LAYOUT_MODEL_PATH=./models/layout_cnn.onnx

# Processing Configuration
DEFAULT_SAMPLE_RATE=500
DEFAULT_PAPER_SPEED=25
DEFAULT_GAIN=10
MAX_IMAGE_SIZE=4096
BATCH_SIZE=8
NUM_WORKERS=4

# Quality Thresholds
MIN_SNR=10.0
MAX_BASELINE_DRIFT=0.2
MIN_COVERAGE=0.8

# Export Configuration
DEFAULT_EXPORT_FORMAT=wfdb
EXPORT_DIR=./outputs

# Cache Configuration
ENABLE_CACHE=true
CACHE_DIR=./cache
CACHE_MAX_SIZE_GB=10

# Security
API_KEY=your-secret-api-key-here
CORS_ORIGINS=*
MAX_UPLOAD_SIZE_MB=50

# Training Configuration
WANDB_API_KEY=your-wandb-key-here
TENSORBOARD_LOG_DIR=./logs/tensorboard
CHECKPOINT_DIR=./checkpoints

# Database (if using for audit logging)
DATABASE_URL=sqlite:///./ecg2signal.db

# Privacy
ANONYMIZE_EXPORTS=false
AUDIT_LOGGING=true
RETAIN_INPUT_IMAGES=false

# Performance
USE_GPU=true
GPU_DEVICE=0
ONNX_OPTIMIZATION_LEVEL=3
PARALLEL_INFERENCE=true
